@import 'nib'

// http://dev.w3.org/csswg/css-device-adapt/#the-atviewport-rule
// http://dev.opera.com/articles/view/an-introduction-to-meta-viewport-and-viewport
@viewport
    width: device-width

// -. .-. MIXINS & VARIABLES .-. .-.
@import 'mixins.styl'
@import 'variables.styl'

@import 'grid.styl'

// -. .-. SKIP LINKS .-. .-.
#skiplinks
    vhidden()

// -. .-. CORE .-. .-.
body
    width: 960px
    margin: 0 auto
    background: #F5F5F5
    font-family: font-default
    color: color-default

// -. .-. TAGS COLORS .-. .-.

tags-color-in-prop(color)

header, nav
    tags-color-in-prop(border-bottom-color, .3)
    .tag
        text-decoration: none
        font-weight: 700
        height: 1.3em
        padding-bottom: -2px
        display: inline-block
        border-bottom: 1px solid

    tags-color-in-prop(color, .8, ':hover')

// -. .-. HEADER .-. .-.

header
    h1
        column: 5
        height: 100px
        margin-top: 50px
        margin-bottom: 50px
        replace-text: url('../images/presenteria.png')
    .side
        float: right
        font-size: 1.1em
    .intro
        margin-top: 40px
        text-align: right
        line-height: 1.5
    .tag
        font-size: 1.3em
    .share
        margin-top: 20px
        float: right
        li
            float: left


// -. .-. NAV .-. .-.
nav
    display: none

// -. .-. CONTENT .-. .-.

#content
    clear: both

.gift
    column: 4
    position: relative
    .product
        color: color-default
        display: block
        overflow: hidden
        text-decoration: none
    .photo
        background: white
        position: relative
        img
            width: 100%
    .description, .vendor
        margin-top: 6px        
    .description
        display: inline-block
    .vendor
        float: right
    .store
        hide-text()
        display: inline-block
        width: 16px
        height: 16px
        margin-right: 2px
        &.thinkgeek
            background: url('../images/vendors/thinkgeek.png')
    .price
        display: inline-block
        font-weight: 700

    .tags
        position: absolute
        top: 4px
        left: 4px
        li
            float: left
            margin-right: 3px
    .tag
        font-size: 0
        line-height: 0
        display: block
        width: 6px
        height: 6px
        overflow: hidden
        text-decoration: none

    tags-color-in-prop(background)

    &:hover
        .photo
            z-index: 100
        .tags
            transition: top .1s ease-out
            top: -28px
            left: 0

        .tag
            transition: height .1s ease-out
            height: 28px
            width: auto
            line-height: 28px
            font-size: 1em
            padding: 0 10px
            &:hover
                color: white

        tags-color-in-prop(background, .2)
        tags-color-in-prop(background, 1, ':hover')
