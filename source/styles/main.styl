@import "nib"

// http://dev.w3.org/csswg/css-device-adapt/#the-atviewport-rule
// http://dev.opera.com/articles/view/an-introduction-to-meta-viewport-and-viewport
@viewport
    width: device-width

// -. .-. MIXINS & VARIABLES .-. .-.
@import "mixins.styl"
@import "variables.styl"

@import "grid.styl"

// -. .-. SKIP LINKS .-. .-.
#skiplinks
    vhidden()

// -. .-. CORE .-. .-.
body
    width: 960px
    margin: 0 auto
    background: #F5F5F5
    font-family: font-default
    color: color-default

// -. .-. CATEGORY COLORS .-. .-.

for category, i in categories
    {".category." + category[0]}
        color: category[1]

header, nav
    .category
        text-decoration: none
        font-weight: 700
        height: 1.3em
        padding-bottom: -2px
        display: inline-block
    for category, i in categories
        {".category." + category[0]}
            border-bottom: 1px solid rgba(category[1], 20%)
            &:hover
                color: rgba(category[1], 80%)

// -. .-. HEADER .-. .-.

header
    h1
        column: 5
        height: 100px
        margin: 50px 0
        replace-text: url(../images/presenteria.png)
    .side
        float: right
    .intro
        margin-top: 40px
        text-align: right
        line-height: 1.5
    .category
        font-size: 1.3em
    .share
        margin-top: 20px
        float: right
        li
            float: left


// -. .-. NAV .-. .-.
nav
    display: none

// -. .-. CONTENT .-. .-.

#content
    clear:both

.gift
    column: 4
    display: inline-block
    .vendor
        float: right
        hide-text()
        width: 16px
        height: 16px
        margin-right: 5px
        &.thinkgeek
            background: url("../images/vendors/thinkgeek.png") no-repeat
    .price
        float: right
    .photo
        background-color: white
        width: 100%
